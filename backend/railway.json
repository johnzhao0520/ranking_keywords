{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "domains": [
    {
      "domain": "your-domain.com",
      "httpsRedirect": true
    }
  ],
  "cronJobs": [
    {
      "name": "backup",
      "command": "/app/backup.sh",
      "schedule": "0 3 * * *",
      "startingDeadlineSeconds": 3600
    }
  ],
  "metrics": {
    "enabled": true
  }
}
